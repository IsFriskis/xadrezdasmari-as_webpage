---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { createClient } from '../../lib/prismicio';
import * as prismicH from '@prismicio/helpers';
import type { CollectionEntry } from 'astro:content';

interface PrismicPath {
  params: { slug: string };
  props: { post: any; source: 'prismic' };
}

interface LocalPath {
  params: { slug: string };
  props: { entry: CollectionEntry<'blog'>; source: 'local' };
}

export async function getStaticPaths() {
  let paths: PrismicPath[] = [];
  
  try {
    // Try to get posts from Prismic
    const client = createClient();
    const prismicPosts = await client.getAllByType('blog_post');
    
    paths = prismicPosts.map(post => ({
      params: { slug: post.uid || '' },
      props: { post, source: 'prismic' as const },
    }));
  } catch (error) {
    console.warn('Prismic not configured, using local content');
  }
  
  // Always include local content as fallback
  const blogEntries = await getCollection('blog');
  const localPaths: LocalPath[] = blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry, source: 'local' as const },
  }));
  
  // If Prismic is configured, use only Prismic posts, otherwise use local
  return paths.length > 0 ? paths : localPaths;
}

const { entry, post, source } = Astro.props;

const formatDate = (date: Date | string) => {
  const dateObj = typeof date === 'string' ? new Date(date) : date;
  return dateObj.toLocaleDateString('gl-ES', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
};

let title, description, date, content;

if (source === 'prismic') {
  title = post.data.title;
  description = post.data.description;
  date = post.first_publication_date;
  content = prismicH.asHTML(post.data.content);
} else {
  title = entry.data.title;
  description = entry.data.description;
  date = entry.data.date;
  const { Content } = await entry.render();
  content = Content;
}
---

<BaseLayout title={`${title} - Xadrez das Mariñas`} description={description}>
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <time datetime={typeof date === 'string' ? date : date.toISOString()} class="post-date">
          {formatDate(date)}
        </time>
        <h1>{title}</h1>
      </div>
    </header>

    <div class="post-content">
      <div class="container">
        <div class="content">
          {source === 'prismic' ? (
            <div set:html={content} />
          ) : (
            <content />
          )}
        </div>
        
        <div class="post-footer">
          <a href="/blog" class="back-link">← Volver ao Blog</a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .post-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-hover) 100%);
    color: white;
    padding: var(--space-xl) 0;
  }

  .post-date {
    display: block;
    color: var(--color-light);
    font-size: 0.9rem;
    margin-bottom: var(--space-sm);
  }

  .post-header h1 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 0;
  }

  .post-content {
    padding: var(--space-2xl) 0;
  }

  .content {
    max-width: 800px;
    margin: 0 auto;
  }

  .content :global(h2) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .content :global(p) {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: var(--space-md);
  }

  .content :global(ul) {
    margin-bottom: var(--space-md);
    margin-left: var(--space-lg);
  }

  .content :global(li) {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: var(--space-xs);
  }

  .content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .content :global(a:hover) {
    color: var(--color-secondary);
  }

  .post-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 2px solid var(--color-border);
  }

  .back-link {
    display: inline-block;
    color: var(--color-accent);
    font-weight: 600;
    transition: color var(--transition);
  }

  .back-link:hover {
    color: var(--color-secondary);
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 1.75rem;
    }

    .post-content {
      padding: var(--space-xl) 0;
    }

    .content :global(p),
    .content :global(li) {
      font-size: 1rem;
    }
  }
</style>

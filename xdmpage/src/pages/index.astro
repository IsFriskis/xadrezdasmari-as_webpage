<style>
  /* Hero Section - Modern minimal design */
  .hero {
    position: relative;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    padding: 6rem 0 4rem;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      repeating-linear-gradient(
        0deg,
        rgba(30, 111, 62, 0.02) 0px,
        transparent 1px,
        transparent 60px,
        rgba(30, 111, 62, 0.02) 61px
      ),
      repeating-linear-gradient(
        90deg,
        rgba(30, 111, 62, 0.02) 0px,
        transparent 1px,
        transparent 60px,
        rgba(30, 111, 62, 0.02) 61px
      );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-md);
    text-align: center;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: var(--space-md);
    color: var(--color-text);
    font-weight: 800;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: var(--space-lg);
    color: var(--color-primary);
    font-weight: 600;
  }

  .hero-description {
    font-size: 1.25rem;
    margin-bottom: var(--space-xl);
    line-height: 1.7;
    color: var(--color-text-light);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-buttons .btn {
    padding: 1rem 2rem;
    font-size: 1.1rem;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .hero-buttons .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .hero-buttons .btn-secondary {
    background-color: white;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .hero-buttons .btn-secondary:hover {
    background-color: var(--color-primary);
    color: white;
  }

  /* Featured Section - Card-based design */
  .featured {
    padding: 5rem 0;
    background: white;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .featured-item {
    background: white;
    padding: 2.5rem 2rem;
    border-radius: 16px;
    text-align: center;
    transition: all 0.3s ease;
    border: 2px solid #f0f0f0;
    position: relative;
    overflow: hidden;
  }

  .featured-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .featured-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    border-color: var(--color-primary);
  }

  .featured-item:hover::before {
    transform: scaleX(1);
  }

  .featured-icon {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    filter: grayscale(0.2);
  }

  .featured-item h3 {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    color: var(--color-text);
    font-weight: 700;
  }

  .featured-item p {
    color: var(--color-text-light);
    line-height: 1.6;
    font-size: 1.05rem;
  }

  /* Blog Section - Modern spacing */
  .blog-section {
    padding: 5rem 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
  }

  .section-title {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.75rem;
    font-weight: 800;
    color: var(--color-text);
    position: relative;
    padding-bottom: 1rem;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .blog-cta {
    text-align: center;
  }

  .blog-cta .btn {
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    border-radius: 12px;
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 3rem;
    }

    .hero h1 {
      font-size: 2.25rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .hero-description {
      font-size: 1.05rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }

    .featured {
      padding: 3rem 0;
    }

    .featured-grid {
      gap: 1.5rem;
    }

    .blog-section {
      padding: 3rem 0;
    }
  }
</style>

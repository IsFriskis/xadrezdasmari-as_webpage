<style>
  /* Hero Section */
  .hero {
    position: relative;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-hover) 100%);
    color: white;
    padding: var(--space-2xl) 0;
    text-align: center;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      repeating-linear-gradient(
        0deg,
        rgba(255, 255, 255, 0.03) 0px,
        transparent 1px,
        transparent 40px,
        rgba(255, 255, 255, 0.03) 41px
      ),
      repeating-linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.03) 0px,
        transparent 1px,
        transparent 40px,
        rgba(255, 255, 255, 0.03) 41px
      );
    opacity: 0.5;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: var(--space-sm);
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: var(--space-md);
    opacity: 0.95;
  }

  .hero-description {
    font-size: 1.125rem;
    margin-bottom: var(--space-xl);
    line-height: 1.8;
    opacity: 0.9;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Featured Section */
  .featured {
    padding: var(--space-2xl) 0;
    background-color: var(--color-light);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-xl);
  }

  .featured-item {
    text-align: center;
    padding: var(--space-md);
  }

  .featured-icon {
    font-size: 3rem;
    margin-bottom: var(--space-md);
  }

  .featured-item h3 {
    margin-bottom: var(--space-sm);
  }

  .featured-item p {
    color: var(--color-text-light);
  }

  /* Blog Section */
  .blog-section {
    padding: var(--space-2xl) 0;
  }

  .section-title {
    text-align: center;
    margin-bottom: var(--space-xl);
    font-size: 2.5rem;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .blog-cta {
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }

    .featured {
      padding: var(--space-xl) 0;
    }

    .blog-section {
      padding: var(--space-xl) 0;
    }
  }
</style>

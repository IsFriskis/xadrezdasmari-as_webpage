---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import { createClient } from '../lib/prismicio';
import { getCollection } from 'astro:content';

// Define the post type
interface Post {
  title: string;
  description: string;
  date: string;
  slug: string;
  image?: string;
}

// Fetch posts from Prismic
let posts: Post[] = [];

try {
  const client = createClient();
  const prismicPosts = await client.getAllByType('blog_post', {
    orderings: [
      { field: 'document.first_publication_date', direction: 'desc' }
    ]
  });
  
  posts = prismicPosts.map((post) => ({
    title: post.data.title as string,
    description: post.data.description as string,
    date: post.first_publication_date,
    slug: post.uid || '',
    image: post.data.featured_image?.url as string | undefined
  }));
} catch (error) {
  // Fallback to local content collection if Prismic is not configured
  console.warn('Prismic not configured, using local content:', error);
  const blogEntries = await getCollection('blog');
  posts = blogEntries.map((entry) => ({
    title: entry.data.title,
    description: entry.data.description,
    date: entry.data.date.toISOString().split('T')[0],
    slug: entry.slug,
    image: entry.data.image
  })).sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
}
---

<BaseLayout 
  title="Blog - Xadrez das Mari침as" 

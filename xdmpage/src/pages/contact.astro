<style>
  .page-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-hover) 100%);
    color: white;
    padding: var(--space-xl) 0;
    text-align: center;
  }

  .page-header h1 {
    color: white;
    font-size: 3rem;
    margin-bottom: var(--space-sm);
  }

  .page-header p {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .contact-content {
    padding: var(--space-2xl) 0;
  }

  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact-info h2,
  .contact-form-wrapper h2 {
    margin-bottom: var(--space-lg);
  }

  .info-item {
    display: flex;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .info-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .info-details h3 {
    margin-bottom: var(--space-xs);
    font-size: 1.25rem;
  }

  .info-details p {
    color: var(--color-text-light);
    margin-bottom: 0;
  }

  .info-details a {
    color: var(--color-accent);
  }

  .social-links {
    margin-top: var(--space-xl);
  }

  .social-links h3 {
    margin-bottom: var(--space-md);
  }

  .social-icons {
    display: flex;
    gap: var(--space-md);
  }

  .social-icon {
    font-size: 2rem;
    transition: transform var(--transition);
    display: inline-block;
  }

  .social-icons a:hover .social-icon {
    transform: scale(1.2);
  }

  /* Form Styles */
  .contact-form {
    background: var(--color-light);
    padding: var(--space-xl);
    border-radius: var(--border-radius);
  }

  .form-group {
    margin-bottom: var(--space-md);
  }

  .form-group label {
    display: block;
    margin-bottom: var(--space-xs);
    font-weight: 600;
    color: var(--color-primary);
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: var(--space-sm);
    border: 2px solid var(--color-border);
    border-radius: var(--border-radius);
    font-family: var(--font-sans);
    font-size: 1rem;
    transition: border-color var(--transition);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .form-group textarea {
    resize: vertical;
  }

  .contact-form button {
    width: 100%;
  }

  @media (max-width: 968px) {
    .contact-wrapper {
      grid-template-columns: 1fr;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .page-header p {
      font-size: 1rem;
    }

    .contact-content {
      padding: var(--space-xl) 0;
    }

    .contact-form {
      padding: var(--space-md);
    }
  }
</style>
